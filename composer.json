{
    "name": "upch/padlock",
    "description": "Proyecto Padlock",
    "type": "project",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/nolbertovilchez/upch-yii2-gii"
        },
        {
            "type": "git",
            "url": "https://github.com/nolbertovilchez/upch-theme-padlock"
        },
        {
            "type": "git",
            "url": "https://github.com/nolbertovilchez/upch-yii2-asset"
        }
    ],
    "require": {
        "yiisoft/yii2": "^2.0",
        "yiisoft/yii2-gii": "^2.0",
        "yiisoft/yii2-debug": "^2.0",
        "upch/yii2-gii": "dev-master",
        "upch/theme-padlock": "dev-master",
        "upch/yii2-asset": "dev-master"
    },
    "authors": [
        {
            "name": "Jos√© Nolberto Vilchez Moreno",
            "email": "jnolbertovm@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "process-timeout": 1800,
        "vendor-dir": "dist/vendor",
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "dist/vendor/npm",
                "bower-asset-library": "dist/vendor/bower"
            }
        }
    },
    "scripts": {
        "post-update-cmd": [
            "if [ ! -d 'dist/runtime' ]; then mkdir 'dist/runtime'; fi",
            "if [ ! -d 'dist/web' ]; then mkdir 'dist/web'; fi",
            "if [ ! -d 'dist/web/assets' ]; then mkdir 'dist/web/assets'; fi",
            "if [  -d 'dist/runtime' ]; then chmod 777 -R 'dist/runtime'; fi",
            "if [  -d 'dist/web/assets' ]; then chmod 777 -R 'dist/web/assets'; fi"
        ]
    }
}
